<% @rooms.each do |room| %>
            <div class="row ">
              <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                <%= link_to room.title, room %>
              </div>
              <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                <%= (current_user && (current_user.id == room.user_id || current_user.is_admin)) ? link_to('Edit', edit_room_path(room)) : '' %>
              </div>
              <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                <%= (current_user && (current_user.id == room.user_id || current_user.is_admin)) ? link_to('Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }) : '' %>
              </div>
            </div>
<% end %>
